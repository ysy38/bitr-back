  @@index([claimed_at], map: "idx_faucet_claims_claimed_at")
  @@index([user_address], map: "idx_faucet_claims_user")
  @@schema("airdrop")
}

model snapshot_balances {
  id             BigInt    @id @default(autoincrement())
